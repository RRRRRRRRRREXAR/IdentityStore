@model IEnumerable<IdentityStore.Models.ProductViewModel>

@{
    ViewBag.Title = "GetCart";
}
    <script>
        function UpdateCart() {
            $.ajax({
                        type: "GET",
                        url: "/Home/GetCart",
                        success: function (data) {
                            $('#myModalContent').html(data);
                        }
                    })
        }
        function DeleteFromCart(id) {
            $.ajax({
                url: '/Home/DeleteFromCart/' + id,
                success: function () {
                    $.ajax({
                        type: "GET",
                        url: "/Home/GetCart",
                        success: function (data) {
                            $('#myModalContent').html(data);
                        }
                    })
                }
            }
            )
        };
        

    </script>
<div class="card" id="Cart">
    <div class="card-header">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        Shipping cart
        <div class="clearfix"></div>
    </div>
    @{int i = 0;}
    @foreach (var item in Model)
    {
        
        <div class="card-body">
            <div class="row">
                <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                    <h4 class="product-name"><strong>@item.Name</strong></h4>
                    <h4>
                        <small>@item.Description</small>
                    </h4>
                </div>
                <div class="col-12 text-sm-center col-sm-12 col-md-4 text-md-right row">
                    <div class="col-4 col-sm-4 col-md-6 text-md-right" style="padding-top: 5px">
                        <h6><strong>@item.Price</strong></h6>
                    </div>
                </div>
                <div class="col-12 text-sm-center col-sm-12 col-md-4 text-md-right row">
                    <div class="col-4 col-sm-4 col-md-6 text-md-right" style="padding-top: 5px">
                        <span style="cursor:pointer" aria-hidden="true" class=" alert-danger" onclick="DeleteFromCart(@i)">&times;</span>
                    </div>
                </div>
            </div>
        </div>
        i++;
    }
    <a href="/Home/Checkout" class="alert-link">Proceed to checkout</a>
    </div>

