@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IdentityStore.Models.OrderViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-top:5%">

        <div class="form-group">
            <label class="control-label col-md-2" for="ShippingAdress">ShippingAdress</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ShippingAdress, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                @Html.ValidationMessageFor(model => model.ShippingAdress, "", new { @class = "text-danger" })
            </div>
        </div>
        @foreach (var shiet in Model.Products)
        {
            <div class="form-group">
                <label class="control-label col-md-2" for="ShippingAdress">ShippingAdress</label>
                <div class="col-md-10">
                    @Html.Display(shiet.Name, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                    @Html.ValidationMessage(shiet.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="ShippingAdress">ShippingAdress</label>
                <div class="col-md-10">
                    @Html.Display(shiet.Price.ToString(), new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                    @Html.ValidationMessage(shiet.Price.ToString(), "", new { @class = "text-danger" })
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Make order" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }
</body>
</html>
